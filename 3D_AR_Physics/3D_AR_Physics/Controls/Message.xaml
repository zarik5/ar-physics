<UserControl x:Class="AR_Physics.Message"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:k="http://schemas.microsoft.com/kinect/2013"
             mc:Ignorable="d" d:DesignHeight="1080" d:DesignWidth="1920" Background="#50000000">
    <Grid>
        <k:KinectUserViewer Height="225" HorizontalAlignment="Center" k:KinectRegion.KinectRegion="{Binding ElementName=kinectRegion}" VerticalAlignment="Top" Width="300" PrimaryUserColor="White" DefaultUserColor="#80FFFFFF" />
        <k:KinectRegion Name="kinectRegion">
            <k:KinectTileButton Name="messageButton" Background="#FFD0DBD7" Height="600" Width="750">
                <TextBlock VerticalAlignment="Center" Name="msgDesc" Text="Calibrazione non riuscita:&#x0a;Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. &#x0a;Premi per riprovare" TextAlignment="Center" FontSize="48" TextWrapping="Wrap" Margin="40" />
            </k:KinectTileButton>
        </k:KinectRegion>
    </Grid>
</UserControl>
