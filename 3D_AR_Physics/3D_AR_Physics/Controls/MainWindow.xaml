<Window x:Class="AR_Physics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013" 
        Closing="Window_Closing"
        xmlns:my="clr-namespace:AR_Physics"
        mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Background="#01000000"
        AllowsTransparency="True"
        WindowStyle="None" KeyDown="Window_KeyDown" Height="1080" Width="1920" GotFocus="Window_GotFocus">

    <Grid Name="mainGrid">
        <my:HowMadeView Margin="2000,0,-2000,0" x:Name="howMadeView"/>
        <my:GameView x:Name="gameView" Margin="0,1100,0,-1100"/>
        <my:Menu x:Name="menu" Margin="0,-1100,0,1100"/>
        <my:Message x:Name="message" Margin="-2000,0,2000,0"/>
        <k:KinectSensorChooserUI Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Name="sensorChooserUi"/>
    </Grid>
</Window>
